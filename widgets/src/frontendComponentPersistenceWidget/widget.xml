<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Model Persistence Widget</title>

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

  <!-- Bootstrap stylesheet import -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <!-- import jQuery for AJAX calls -->
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <!-- Inter Widget Communication library import-->
  <script type="text/javascript" src="http://dbis.rwth-aachen.de/gadgets/iwc/lib/iwc.js"></script>
  <!-- style information -->
  <link rel="stylesheet" href="@@host/frontendComponentPersistenceWidget/css/style.css">
  <!-- import the client library -->
  <script type="text/javascript" src="@@host/frontendComponentPersistenceWidget/js/las2peerWidgetLibrary.js"></script>
  <!-- import yjs -->
  <script type="text/javascript" src="@@host/frontendComponentPersistenceWidget/js/yjs/y.js"></script>
  <!-- import application script -->
  <script type="text/javascript" src="@@host/frontendComponentPersistenceWidget/js/applicationScript.js"></script>
</head>
<body>
  <!-- container for actual page content -->
    <h5 id="loaded-model-info">No model loaded from the database</h5>
    <div class="btn-group btn-group-justified">
      <div class="btn-group">
        <button id="store-model" class="btn btn-default">Store</button>
      </div>
      <div class="btn-group">
        <button id="reset-model" class="btn btn-default" disabled>Reset</button>
      </div>
    </div>
    <br>
  </div>

  <div class="form-group">
    <label id="modelType" for="model-list">Persisted models</label>
    <select id="model-list" class="form-control"></select>
  </div>
  <div class="btn-group btn-group-justified">
    <div class="btn-group">
        <button id="load-model" class="btn btn-default">Load</button>
    </div>
    <div class="btn-group">
        <button id="delete-model" class="btn btn-default" disabled>Delete</button>
    </div>
  </div>
  <div id="status-container" class="form-group">
      <input type="text" class="form-control" id="status" placeholder="Status.." disabled>
  </div>

</div>
</body>
</html>

